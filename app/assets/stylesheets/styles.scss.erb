/***** Splash *****/

.underlay {
	position: fixed;
	top: 0px;
	left: 0px;
	width: 100%;
	height: 100%;
	z-index: -1;
	background: url(<%= asset_path 'handheld.jpg' %>);
	background-size: cover;
}

.signup_form, .signin_form {
	display: none;
}

.active {
	display: block;
}

.signup, .signin {
	position: absolute;
	bottom: 90px;
	width: 120px;
	height: 40px;
	border: 3px solid white;
	cursor: pointer;
	text-align: center;
	line-height: 40px;
}

.signup {
	left: 5px;
}

.signin {
	right: 5px;
}